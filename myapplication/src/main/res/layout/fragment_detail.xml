<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.arno.myapplication.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:background="#07a69c"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        tools:text="1233" />

    <RelativeLayout
        android:id="@+id/detail_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/poster" />

        <TextView
            android:id="@+id/detail_vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datail_release_date"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/detail_poster"
            android:text="8.7/10"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/datail_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/detail_vote_average"
            android:layout_marginTop="44dp"
            android:text="1972"
            android:textSize="30sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/detail_overView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>
